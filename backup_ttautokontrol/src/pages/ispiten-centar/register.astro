---
import Header from '../../components/Header.astro';
---

<html lang="mk">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>Пријава за испит - ТТ Ауто Контрол</title>
		<meta name="description" content="Пријавете се за испит за АДР сертификат" />
	</head>
	<body class="bg-gray-50">
		<Header />

		<main>
			<section class="py-20">
				<div class="container mx-auto px-4">
					<div class="max-w-2xl mx-auto">
						<h1 class="text-4xl font-bold mb-8 text-center">Пријава за испит</h1>
						
						<div class="bg-white rounded-lg shadow-md p-8">
							<form class="space-y-6">
								<div>
									<label for="name" class="block text-sm font-medium text-gray-700 mb-1">Име и презиме</label>
									<input type="text" id="name" name="name" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
								</div>

								<div>
									<label for="email" class="block text-sm font-medium text-gray-700 mb-1">Емаил адреса</label>
									<input type="email" id="email" name="email" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
								</div>

								<div>
									<label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Телефонски број</label>
									<input type="tel" id="phone" name="phone" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
								</div>

								<div>
									<label for="exam-date" class="block text-sm font-medium text-gray-700 mb-1">Датум на испит</label>
									<select id="exam-date" name="exam-date" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
										<option value="">Изберете датум</option>
										<option value="2025-04-29">29 Април 2025</option>
										<option value="2025-05-27">27 Мај 2025</option>
										<option value="2025-06-24">24 Јуни 2025</option>
									</select>
								</div>

								<div>
									<label for="message" class="block text-sm font-medium text-gray-700 mb-1">Дополнителни информации</label>
									<textarea id="message" name="message" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"></textarea>
								</div>

								<div class="flex items-center">
									<input type="checkbox" id="terms" name="terms" required class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
									<label for="terms" class="ml-2 block text-sm text-gray-700">
										Се согласувам со условите за пријавување
									</label>
								</div>

								<button type="submit" class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 transition-colors">
									Пријави се
								</button>
							</form>
						</div>
					</div>
				</div>
			</section>
		</main>

		<footer class="bg-gray-900 text-white py-12">
			<div class="container mx-auto px-4">
				<div class="text-center">
					<p>&copy; 2024 ТТ Ауто Контрол. Сите права задржани.</p>
				</div>
			</div>
		</footer>
	</body>
</html> 