---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Контакт - ТТ Ауто Контрол">
	<main>
		<!-- Hero Section -->
		<section class="hero-section">
			<div class="hero-content">
				<h1 class="page-title">Контакт</h1>
				<p class="page-subtitle">Контактирајте нè за повеќе информации</p>
			</div>
		</section>

		<!-- Contact Section -->
		<section class="section-container">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
				<!-- Contact Info -->
				<div class="card">
					<h2 class="text-2xl font-bold mb-6 text-gray-800">Контакт информации</h2>
					<div class="space-y-4">
						<div class="flex items-start">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
							</svg>
							<div class="ml-4">
								<h3 class="text-lg font-medium text-gray-800">Адреса</h3>
								<p class="text-gray-600">Улица "Антон Попов" бр. 78 - Ченто</p>
								<p class="text-gray-600">1000 Скопје, Македонија</p>
							</div>
						</div>
						<div class="flex items-start">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
							</svg>
							<div class="ml-4">
								<h3 class="text-lg font-medium text-gray-800">Телефон</h3>
								<p class="text-gray-600">+389 71 295 777</p>
								<p class="text-gray-600">+389 76 236 699</p>
							</div>
						</div>
						<div class="flex items-start">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
							</svg>
							<div class="ml-4">
								<h3 class="text-lg font-medium text-gray-800">Е-маил</h3>
								<p class="text-gray-600">info@ttautokontrol.mk</p>
							</div>
						</div>
					</div>
				</div>

				<!-- Contact Form -->
				<div class="card">
					<h2 class="text-2xl font-bold mb-6 text-gray-800">Испратете ни порака</h2>
					<form class="space-y-4">
						<div>
							<label for="name" class="block text-sm font-medium text-gray-700">Име и презиме</label>
							<input type="text" id="name" name="name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary">
						</div>
						<div>
							<label for="email" class="block text-sm font-medium text-gray-700">Е-маил</label>
							<input type="email" id="email" name="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary">
						</div>
						<div>
							<label for="message" class="block text-sm font-medium text-gray-700">Порака</label>
							<textarea id="message" name="message" rows="4" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary"></textarea>
						</div>
						<button type="submit" class="w-full bg-primary text-white py-2 px-4 rounded-md hover:bg-primary-dark transition-colors duration-300">
							Испрати
						</button>
					</form>
				</div>
			</div>
		</section>
	</main>
</Layout>

<script>
    // Form submission handler
    const form = document.querySelector('form');
    if (form) {
        form.addEventListener('submit', (e) => {
            e.preventDefault();
            // Here you would typically send the form data to your server
            alert('Ви благодариме за пораката! Ќе ве контактираме наскоро.');
            form.reset();
        });
    }
</script> 