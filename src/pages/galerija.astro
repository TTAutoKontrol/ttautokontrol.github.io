---
import Layout from '../layouts/Layout.astro';

const images = [
    {
        src: 'https://images.unsplash.com/photo-1486262715619-67b85e0b08d3?auto=format&fit=crop&w=1200&h=800&q=80',
        alt: 'Технички преглед 1',
        title: 'Модерна опрема'
    },
    {
        src: 'https://images.unsplash.com/photo-1492144534655-ae79c964c9d7?auto=format&fit=crop&w=1200&h=800&q=80',
        alt: 'Технички преглед 2',
        title: 'Професионален тим'
    },
    {
        src: 'https://images.unsplash.com/photo-1503376780353-7e6692767b70?auto=format&fit=crop&w=1200&h=800&q=80',
        alt: 'Технички преглед 3',
        title: 'Детален преглед'
    },
    {
        src: 'https://images.unsplash.com/photo-1583121274602-3e2820c69888?auto=format&fit=crop&w=1200&h=800&q=80',
        alt: 'Технички преглед 4',
        title: 'Современа технологија'
    },
    {
        src: 'https://images.unsplash.com/photo-1550355291-bbee04a92027?auto=format&fit=crop&w=1200&h=800&q=80',
        alt: 'Технички преглед 5',
        title: 'Стручна анализа'
    },
    {
        src: 'https://images.unsplash.com/photo-1568605117036-5fe5e7bab0b7?auto=format&fit=crop&w=1200&h=800&q=80',
        alt: 'Технички преглед 6',
        title: 'Квалитетна услуга'
    }
];
---

<Layout title="Галерија - ТТ Ауто Контрол">
	<main>
		<!-- Hero Section -->
		<section class="relative py-20 bg-gradient-to-r from-red-600 to-red-800 text-white">
			<div class="absolute inset-0 bg-black/50"></div>
			<div class="relative max-w-6xl mx-auto px-4">
				<h1 class="text-4xl md:text-5xl font-bold mb-6">Галерија</h1>
				<p class="text-xl text-red-100 max-w-2xl">Погледнете ја нашата модерна опрема и професионален тим</p>
			</div>
		</section>

		<!-- Main Content -->
		<section class="py-16">
			<div class="max-w-6xl mx-auto px-4">
				<!-- Gallery Grid -->
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
					{images.map((image) => (
						<div class="group relative overflow-hidden rounded-lg shadow-sm border border-red-100 hover:shadow-md transition-all duration-300">
							<img 
								src={image.src} 
								alt={image.alt}
								class="w-full h-64 object-cover transform transition-transform duration-300 group-hover:scale-105"
							>
							<div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
								<div class="absolute bottom-0 left-0 right-0 p-6">
									<h3 class="text-white text-xl font-semibold">{image.title}</h3>
								</div>
							</div>
						</div>
					))}
				</div>

				<!-- Video Section -->
				<div class="bg-white rounded-lg p-8 shadow-sm border border-red-100 mb-16">
					<h2 class="text-2xl font-bold text-gray-800 mb-6">Видео презентација</h2>
					<div class="aspect-w-16 aspect-h-9">
						<iframe 
							class="w-full h-[500px] rounded-lg shadow-sm"
							src="https://www.youtube.com/embed/dQw4w9WgXcQ"
							title="ТТ Ауто Контрол - Видео презентација"
							frameborder="0"
							allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
							allowfullscreen
						></iframe>
					</div>
				</div>

				<!-- Virtual Tour -->
				<div class="bg-white rounded-lg p-8 shadow-sm border border-red-100">
					<h2 class="text-2xl font-bold text-gray-800 mb-6">Виртуелна тура</h2>
					<div class="aspect-w-16 aspect-h-9">
						<iframe 
							class="w-full h-[500px] rounded-lg shadow-sm"
							src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2968.654490987!2d21.4333!3d41.9983!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDHCsDU5JzU0LjIiTiAyMcKwMjUnNTkuOSJF!5e0!3m2!1sen!2smk!4v1620000000000!5m2!1sen!2smk"
							title="Виртуелна тура - ТТ Ауто Контрол"
							frameborder="0"
							allowfullscreen
						></iframe>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>

<style>
	main {
		min-height: calc(100vh - 200px);
	}
	
	.aspect-w-16 {
		position: relative;
		padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
	}

	.aspect-w-16 iframe {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
	}
</style> 